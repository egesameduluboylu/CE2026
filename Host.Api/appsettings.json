{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=PlatformDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3000", "http://127.0.0.1:3001", "http://localhost:5211", "http://localhost:5212", "http://127.0.0.1:5211", "http://127.0.0.1:5212" ]
  },
  "Jwt": {
    "Issuer": "Platform",
    "Audience": "PlatformClients",
    "Key": "THIS_IS_A_DEV_SECRET_CHANGE_ME_MIN_32_CHARS",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 14

  },
  "AuthCookies": {
    "RefreshCookieName": "rt",
    "RefreshCookieDays": 14,
    "SameSite": "Lax"
  },
  "AuthSecurity": {
    "MaxFailedLogins": 5,
    "LockoutMinutes": 10
  },
  "Database": {
    "AutoMigrate": true
  },
    "Email": {
      "Provider": "File",
      "FromEmail": "no-reply@localhost",
      "FromName": "Platform Admin",
      "FrontendBaseUrl": "http://localhost:5211",
      "FilePickupDirectory": "App_Data/mails",
      "SmtpHost": "smtp.yourhost.com",
      "SmtpPort": 587,
      "SmtpUseSsl": true,
      "SmtpUser": "",
      "SmtpPass": ""
    },
    "PasswordReset": {
      "TokenMinutes": 30,
      "TokenPepper": "CHANGE_ME_LONG_RANDOM"
    }
  }
